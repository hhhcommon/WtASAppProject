<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dinglan_orange"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <ImageView
            android:id="@+id/head_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_images"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载位置"
            android:layout_centerInParent="true"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/activity_head_center_s" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg" >

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/person_color"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:text="手机"
            android:textColor="@color/wt_login_third"
            android:textSize="@dimen/activity_head_right"/>

        <TextView
            android:id="@+id/tv_downloadposition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="下载路径"
            android:layout_alignBottom="@id/text_phone"
            android:layout_marginBottom="10dp"
            android:textColor="@color/beijing"
            android:textSize="@dimen/text_size_13"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="18dp"
            android:layout_alignTop="@id/text_phone"
            android:layout_alignBottom="@id/text_phone"
            android:src="@mipmap/wt_group_checked" />

    </RelativeLayout>

</LinearLayout>